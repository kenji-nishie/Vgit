.message{data: {id: "#{message.id}", "group-id": "#{message.group_id}"}} 
  .upper-message
    .switch
      - if message.check_num == 0
        %label.switch__label
          %input.switch__input{type: "checkbox",name: "resolve",checked_value: "1", unchecked_value: "0",check_box: @check_num}/
          %input.switch__input{type: "checkbox",name: "resolve"}/ 
          %span.switch__content
          %span.switch__circle
      - else
        %label.switch__label
          %input.switch__input{type: "checkbox",name: "resolve",checked_value: "1", unchecked_value: "0",check_box: @check_num}/
          %input.switch__input{type: "checkbox",name: "resolve"}/ 
          %span.switch__content
          %span.switch__circle
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
      %a{:href => message_comments_path(message.id)}  Comment
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?